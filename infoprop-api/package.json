{
  "name": "infoprop-backend",
  "version": "1.0.0",
  "description": "Express simple RESTful API",
  "author": "Alexandre Alphonsos",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production node ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^6.0.0",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "mongoose": "^5.2.17",
    "morgan": "^1.8.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "nodemon": "^1.11.0",
    "opn-cli": "^3.1.0"
  }
}
